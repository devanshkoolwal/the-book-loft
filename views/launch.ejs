<div class="container">
            <form action="/launch" method="post">
        <div class="row m-0 p-2 pl-8 pr-8">
            <div class="col">
                
                <h5 class="form_heading">Book Details*</h5>
            </div>
        
            <div class="col-12">
            
               
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Book Name</span>
                    </div>
                    <input type="text" class="form-control"aria-label="Name" name="bookuser[name]" aria-describedby="basic-addon1" required>
                  </div>
                 
               
            </div>
            

            <div class="col-12">
                <div class="row">
                   <div class="col-12 col-md-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Author Name</span>
                        </div >
                        <input type="text" class="form-control"aria-label="Name" name="bookuser[author]" aria-describedby="basic-addon1" required>
                      </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon1">Publisher Name</span>
                            </div>
                            <input type="text" class="form-control"aria-label="Name" name="bookuser[publisher]" aria-describedby="basic-addon1" required>
                          </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">ISBN</span>
                                </div>
                                <input type="text" class="form-control"aria-label="Name" name="bookuser[isbn]" aria-describedby="basic-addon1" required>
                              </div>
                            </div>                   
                </div>



        </div>
       
        <div class="col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" >Description</span>
                </div>
                <textarea class="form-control" name="bookuser[description]" aria-label="With textarea" required></textarea>
              </div>
            </div>

            <div class="col-12">
                <h6>Is book available on any other E-Commerce site?</h6>

                                        <input type="radio" id="yes" value="Yes" name="bookuser[ecommerce_available]" ><label for="yes">Yes</label><br>
                                        <input type="radio"  id="no" value="No" name="bookuser[ecommerce_available]" ><label for="no">No</label><br>
                                    </div>
                                   

            <div class="col">
                <hr>
                <h5 class="form_heading">Classification*</h5>
            </div>
                <div class="col-12">
                        <div class="row justify-content-between">
                            <div class="col-md-5 m-2">
                                <h6>Genre</h6>
                                <div class="row">
                                    <div class="col-6">
                        <input type="radio"  id="action" value="Action" name="bookuser[genre]"><label for="action">Action</label><br>
                        <input type="radio" id="Biographies" value="Biographies" name="bookuser[genre]"><label for="biographies">Biographies</label><br>
                        <input type="radio" id="Crime" value="Crime" name="bookuser[genre]"><label for="crime">Crime</label><br>
                        <input type="radio" id="History" value="History" name="bookuser[genre]"><label for="history">History</label><br>
                                    </div>
                                    <div class="col-6">
                        <input type="radio"  id="Fiction" value="Fiction" name="bookuser[genre]"><label for="fiction">Fiction</label><br>
                        <input type="radio"  id="Education" value="Education" name="bookuser[genre]"><label for="education">Education</label><br>
                        <input type="radio"  id="Technology" value="Technology" name="bookuser[genre]"><label for="technology">Technology</label><br>
                        <input type="radio"  id="Sports" value="Sports" name="bookuser[genre]"><label for="sports">Sports</label><br>
                                    </div>
                                </div>
                    </div>
                    <div class="col-md-5 m-2">
                        
                        <h6>Language</h6>
                        <div class="row">
                            <div class="col-6">
                                
                                <input type="radio"  id="English" value="English" name="bookuser[language]"><label for="english">English</label><br>
                                <input type="radio" id="Telugu" value="Telugu" name="bookuser[language]"><label for="telugu">Telugu</label><br>
                                <input type="radio"  id="Hindi" value="Hindi" name="bookuser[language]"><label for="hindi">Hindi</label><br>
                        

                            </div>
                            <div class="col-6">
                                <input type="radio"  id="Kannada" value="Kannada" name="bookuser[language]"><label for="kannada">Kannada</label><br>
                        <input type="radio"  id="Tamil" value="Tamil" name="bookuser[language]"><label for="tamil">Tamil</label><br>
                            </div>
                            
                        </div>
                    
                    </div>
                    </div>

                </div>
                <div class="col">
                    <hr>
                    <h5 class="form_heading">Image*</h5>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-md-5">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">Image Link</span>
                                </div>
                                <input type="text" class="form-control"aria-label="Link" aria-describedby="basic-addon1" required name="bookuser[image_link]>
                              </div>
                        </div>
                        <div class="col-md-2 text-center">
                            <p>OR</p>
                        </div>
                        <div class="col-12 col-md-5">
                            <input type="file" name="" id="">
                        </div>
                    </div>
                </div>

                <div class="col">
                    <hr>
                    <h5 class="form_heading">Product Links</h5>
                </div>
                <div class="col-12">
                    <div class="row">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Amazon Link</span>
                    </div>
                    <input type="text" class="form-control"aria-label="Amazon Link" name="bookuser[amazon_link]" aria-describedby="basic-addon1">
                  </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Flikart Link</span>
                        </div>
                        <input type="text" class="form-control"aria-label="Flipkart Link" name="bookuser[flipkart_link]" aria-describedby="basic-addon1">
                      </div>
                </div>
                        

                    </div>   
                </div>

                <div class="col">
                    <hr>
                    <h5 class="form_heading">E-Book(If E-book is available)</h5>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-md-5">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">E-Book Link</span>
                                </div>
                                <input id="ecommercelink" type="text" class="form-control"aria-label="Link" name="bookuser[ebook_link]" required aria-describedby="basic-addon1">
                              </div>
                        </div>
                        <div class="col-md-2 text-center">
                            <p>OR</p>
                        </div>
                        <div class="col-12 col-md-5">
                            <input type="file" name="" id="">
                        </div>
                    </div>
                </div>
               
                
                    
                </div>
                <div style="float: right;" class="mb-3">
                    <input type="submit" class="btn btn-success" ></input>
                 </div>

                </form>
        </div>
        
   
    <script>
        document.getElementById("yes").addEventListener('change', function(){
    document.getElementById("ecommercelink").required = !this.checked ;
})
    document.getElementById("no").addEventListener('change', function(){
    document.getElementById("ecommercelink").required = this.checked ;
})
    </script>
    
